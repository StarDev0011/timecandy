{% for tag in product.tags %}
    {% if tag contains 'decade-selection' %}
      {% if tag contains '|' %}
        {%- assign decadeLabel = tag | split: '|' | last -%}
        {% assign decadeRequired = true %}
      {% endif %}
    {% endif %}
{% endfor %}

<fieldset class="js product-form__input{% if optionName == 'decade' %} product-detail__swatch-order{% elsif is_size %} product-form__option-size{% else %} product-form__option-other{% endif %}">
    <label for="decade-selection" class="form__label">{{ decadeLabel }}{% if decadeRequired %}<span style="color: #AC1229"> *</span>{% endif %}</label>
    <div class="product-swatch__label product-swatch__selected" tabindex="0" aria-expanded="false"
      aria-labelledby="product-form__swatch-dropdown"
      role="combobox" id="variant-1950s">
        <label for="option" class="js-option-label">1950s</label>
        <span> {% render 'icon-caret' %} </span>
    </div>
    <div id="decade-selection" role="listbox" aria-labelledby="product-form__swatch-dropdown"  class="{% if is_size %}product-form__swatch-size{% else %} product-form__swatch-dropdown{% endif %}">
        <input style="opacity:0" tabindex="-1" class="js-variant-input" name="decade-input" tabindex="-1" type="radio" id="{{ section.id }}-1950s" value="1950s" form="{{ product_form_id }}" checked>
        <label id="variant-1950s" tabindex="0" class="js-variant-active js-variant-item" for="{{ section.id }}-1950s">1950s</label>
        <input class="js-variant-input" name="decade-input" tabindex="-1" type="radio" id="{{ section.id }}-1960s" value="1960s" form="{{ product_form_id }}">
        <label id="variant-1960s" tabindex="0" class="js-variant-item" for="{{ section.id }}-1960s">1960s</label>
        <input class="js-variant-input" name="decade-input" tabindex="-1" type="radio" id="{{ section.id }}-1970s" value="1970s" form="{{ product_form_id }}">
        <label id="variant-1970s" tabindex="0" class="js-variant-item" for="{{ section.id }}-1970s">1970s</label>
        <input class="js-variant-input" name="decade-input" tabindex="-1" type="radio" id="{{ section.id }}-1980s" value="1980s" form="{{ product_form_id }}">
        <label id="variant-1980s" tabindex="0" class="js-variant-item" for="{{ section.id }}-1980s">1980s</label>
        <input class="js-variant-input" name="decade-input" tabindex="-1" type="radio" id="{{ section.id }}-1990s" value="1990s" form="{{ product_form_id }}">
        <label id="variant-1990s" tabindex="0" class="js-variant-item" for="{{ section.id }}-1990s">1990s</label>
        <input class="js-variant-input" name="decade-input" tabindex="-1" type="radio" id="{{ section.id }}-all" value="all" form="{{ product_form_id }}">
        <label id="variant-all" tabindex="0" class="js-variant-item" for="{{ section.id }}-all">All</label>
    </div>
</fieldset>