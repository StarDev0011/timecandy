<div class="collection-candy__header">
  <div class="container">    
    <h1 class="collection-candy__header-sub">
      {{- collection.title -}}
    </h1>
    <div class="h1 collection-candy__header-title">
      {{- collection.description | strip_html | truncate: 300 -}}
    </div>
  </div>
</div>

<style>
  .collection-candy__header {
    background-color: {{ section.settings.bg_color }}
  }

  .collection-candy__header-sub {
    color: {{ section.settings.color_sub }}
  }

  .collection-candy__header-title {
    color: {{ section.settings.color_title }}
  }

  .collection-candy__header {
    padding: 81px 0;
    text-align: center;
    margin-bottom: 20px;
  }

  .collection-candy__header-sub {
    font-weight: 300;
    font-size: 18px;
    line-height: 24px;
    text-transform: uppercase;
    font-family: var(--my-font);
    margin-bottom: 16px;
  }

  .collection-candy__header-title {
    margin: 0 auto;
    font-weight: 400;
    max-width: 812px;
    font-size: 18px;
    line-height: 30px;
    text-transform: none;
    font-family: var(--font-2);
  }

  @media (max-width: 767px) {
    .collection-candy__header-sub {
      font-size: 14px;
      line-height: 24px;
      margin-bottom: 6px;
    }

    .collection-candy__header-title {
      font-size: 14px;
      line-height: 24px;
    }

    .collection-candy__header {
      padding: 48px 0;
      margin-bottom: 20px;
    }
  }
</style>

{% schema %}
  {
    "name": "Dynamic banner",
    "settings": [
      {
        "type": "color",
        "id": "color_sub",
        "label": "Color Sub tilte",
        "default": "#0C5273"
      },
      {
        "type": "color",
        "id": "color_title",
        "label": "Color Tilte",
        "default": "#262626"
      },
      {
        "type": "color",
        "id": "bg_color",
        "label": "Background Color",
        "default": "#BBE2DD"
      }
    ],
    "presets": [
      {
        "name": "Dynamic collection banner"
      }
    ]
  }
{% endschema %}