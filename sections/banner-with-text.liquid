<div class="banner-with-text">
  <div class="container">
    <div class="banner-with-text__content">
      {% for block in section.blocks %}
        <div class="banner-with-text__item banner-item-{{ block.id }}">
          <a class="banner-with-text__link" href="{{ block.settings.link }}">
            {% if block.settings.image != blank %}
              <div class="banner-with-text__picture">
                <img class="banner-with-text__img" src="{{ block.settings.image | img_url: '1024x' }}">
              </div>
            {% endif %}
            {% if block.settings.btn != blank %}
              <div class="banner-with-text__action">
                <div class="banner-with-text__btn button"> {{ block.settings.btn }} </div>
              </div>
            {% endif %}
            {% if block.settings.title != blank %}
              <div class="banner-with-text__label item-label"> {{ block.settings.title }} </div>
            {% endif %}
          </a>
          <style>
            .banner-item-{{ block.id }} .item-label {
              color: {{ block.settings.color_label }};
              background-color: {{ block.settings.bg_label }};
            }
          </style>
        </div>
      {% endfor %}
    </div>
  </div>
</div>

<style>
  .banner-with-text__content {
    display: grid;
    grid-template-columns: 1fr 1fr;
    grid-gap: 20px;
  }

  .banner-with-text__picture {
    position: relative;
    padding-top: 85.7%;
  }

  .banner-with-text__link {
    display: block;
    position: relative;
    text-decoration: none;
    background-color: #fff;
    border-radius: 15px;
  }

  .banner-with-text__img {
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    object-fit: cover;
    padding: 30px 0;
  }

  .banner-with-text__action {
    position: absolute;
    bottom: 40px;
    left: 0;
    right: 0;
    text-align: center;
  }

  .banner-with-text__btn {
    border-radius: 32px;
  }

  .item-label {
    position: absolute;
    top: 24px;
    left: 0;
    padding: 7px 30px 7px 10px;
    font-weight: 300;
    font-size: 12px;
    line-height: 21px;
    text-transform: uppercase;
    font-family: var(--my-font);
    background-color: #8ED1CB;
  }

  .item-label::before {
    width: 0;
    height: 0;
    content: "";
    display: inline-block;
    border-top: 17.5px solid transparent;
    border-right: 14px solid #fff;
    border-bottom: 17.5px solid transparent;
    position: absolute;
    right: 0;
    top: 0;
  }

  .banner-with-text {
    padding-bottom: 80px;
    padding-top: 20px;
  }

  @media (max-width: 767px) {
    .banner-with-text__content {
      grid-template-columns: 1fr;
    }
  }

</style>

{% schema %}
  {
    "name": "Banner with Text",
    "max_blocks": 4,
    "blocks": [
      {
        "name": "Banner",
        "type": "banner",
        "settings": [
          {
            "type": "image_picker",
            "id": "image",
            "label": "Select image"
          },
          {
            "type": "text",
            "id": "btn",
            "label": "Button"
          },
          {
            "type": "url",
            "id": "link",
            "label": "Link"
          },
          {
            "type": "text",
            "id": "title",
            "label": "Label",
            "default": "Personalized gifts"
          },
          {
            "type": "color",
            "id": "bg_label",
            "label": "Background label",
            "default": "#8ED1CB"
          },
          {
            "type": "color",
            "id": "color_label",
            "label": "Color label",
            "default": "#262626"
          }
        ]
      }
    ],
    "presets": [
      {
        "name": "Banner with text",
        "blocks": [
          {
            "type": "banner"
          }
        ]
      }
    ]
  }
{% endschema %}
