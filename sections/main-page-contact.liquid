<link rel="stylesheet" href="{{ 'section-main-page.min.css' | asset_url }}" media="print" onload="this.media='all'">
<link rel="stylesheet" href="{{ 'component-rte.css' | asset_url }}" media="print" onload="this.media='all'">

<noscript>{{ 'section-main-page.min.css' | asset_url | stylesheet_tag }}</noscript>
<noscript>{{ 'component-rte.css' | asset_url | stylesheet_tag }}</noscript>

<style>
  .main-page-contact .main-page-title{
    font-weight: 200;
    text-transform: uppercase;
    font-size: 40px;
    letter-spacing: 1px;
    line-height: 50px;
    color: #000000;
  }

  .section-{{ section.id }}-padding {
    background-color: {{section.settings.bg_color}};
    padding-top: {{ section.settings.padding_top | times: 0.75 | round: 0 }}px;
    padding-bottom: {{ section.settings.padding_bottom | times: 0.75 | round: 0 }}px;
  }

  #messages table:not([class]) {
    box-shadow: none;
    border: none;
  }

  #messages table:not([class]) td{
    border: none;
  }

  .item-contact_list{
    display: grid;
    grid-template-columns: 1fr 1fr;
    gap: 40px 20px;
  }

  .item-contact_{{ block.id }}{
    padding: 80px 15px;
    box-shadow: 0px 2px 10px rgba(0, 0, 0, 0.25);
    border-radius: 15px;
    display: flex;
    flex-direction: column;
    align-items: center;
    justify-content: center;
    background-color: {{ block.settings.bg_block }};
  }

  .item-contact_block h2{
    font-weight: 200;
    font-size: 28px;
    line-height: 36px;
    color: #000000;
  }

  .item-contact_block .rte{
    font-weight: 400;
    font-size: 16px;
    line-height: 24px;
    color: #000000;
  }

  .item-contact_block a{
    display: inline-block;
    color: #fff;
    text-decoration: none;

  }

  @media screen and (min-width: 750px) {
    .section-{{ section.id }}-padding {
      padding-top: {{ section.settings.padding_top }}px;
      padding-bottom: {{ section.settings.padding_bottom }}px;
    }
  }

  @media screen and (max-width: 749px) {
    .item-contact_list{
      grid-template-columns: 1fr;
    }

    .item-contact_{{ block.id }}{
      width: 336px;
      height: 389px;
    }
  }
</style>

<div class="main-page-contact page-width page-width--narrow section-{{ section.id }}-padding">
  {% if section.settings.heading != blank %}
    <h1 class="main-page-title page-title ">
      {{ section.settings.heading }}
    </h1>
  {% else %}
    <h1 class="main-page-title page-title ">
      {{ page.title | escape }}
    </h1>
  {% endif %}
  <ul class="main-page-content item-contact_list">
    {% for block in section.blocks %}
      <li class="item-contact_block item-contact_{{ block.id }}">
        <h2>{{ block.settings.title }}</h2>
        <div class="rte">
          {{ block.settings.content }}
        </div>
        <a class="button button--primary" href="{{ block.settings.btn_url }}">{{ block.settings.btn_label }}</a>
      </li>
    {% endfor %}
  </ul>
  {% if section.settings.show_content == true %}
    <div class="rte">
      {{ page.content }}
    </div>
  {% endif %}
</div>

{% schema %}
{
  "name": "t:sections.main-page.name",
  "tag": "section",
  "class": "section",
  "max_blocks": 2,
  "settings": [
    {
      "type": "text",
      "id": "heading",
      "label": "Heading",
      "default": "Contact us"
    },
    {
      "type": "header",
      "content": "t:sections.all.padding.section_padding_heading"
    },
    {
      "type": "range",
      "id": "padding_top",
      "min": 0,
      "max": 100,
      "step": 4,
      "unit": "px",
      "label": "t:sections.all.padding.padding_top",
      "default": 36
    },
    {
      "type": "range",
      "id": "padding_bottom",
      "min": 0,
      "max": 100,
      "step": 4,
      "unit": "px",
      "label": "t:sections.all.padding.padding_bottom",
      "default": 36
    },
    {
      "type": "checkbox",
      "id": "show_content",
      "label": "Show page content",
      "default": false
    },
    {
      "type": "color",
      "id": "bg_color",
      "label": "Background color",
      "default": "#E4F1F5"
    }
  ],
  "blocks": [
    {
      "name": "Item",
      "type": "text",
      "settings": [
        {
          "type": "text",
          "id": "title",
          "label": "Title",
          "default": "Chat with us"
        },
        {
          "type": "richtext",
          "id": "content",
          "label": "Content",
          "default": "<p>Want to speak to Customer Support?</p><p>Chat with us from 9am-4pm EST  M-F</p>"
        },
        {
          "type": "text",
          "id": "btn_label",
          "label": "Label",
          "default": "Label button"
        },
        {
          "type": "url",
          "id": "btn_link",
          "label": "Contact link"
        },
        {
          "type": "color",
          "id": "bg_block",
          "label": "Background block",
          "default": "#FFFFFF"
        },
      ]
    }
  ]
}
{% endschema %}
